apiVersion: v1
kind: Service
metadata:
  name: keycloak
  namespace: <%= kubernetesNamespace %>
  labels:
    app: keycloak
spec:
  ports:
  - name: http
    port: 9080
    targetPort: 8080
  - name: https
    port: 9443
    targetPort: 8443
  selector:
    app: keycloak
  type: <%= ingressTypeGke ? 'NodePort' : 'ClusterIP' %>
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keycloak
  namespace: <%= kubernetesNamespace %>
  labels:
    app: keycloak
spec:
  replicas: 1
  selector:
    matchLabels:
      app: keycloak
  template:
    metadata:
      labels:
        app: keycloak
    spec:
      containers:
      - name: keycloak
        image: <%- dockerContainers.keycloak %>
        args: ["start --import-realm"]
        env:
        - name: KEYCLOAK_ADMIN
          value: "admin"
        - name: KEYCLOAK_ADMIN_PASSWORD
          value: "admin"
        - name: KC_DB
          value: dev-file
        - name: KC_FEATURES
          value: scripts
        - name: KC_PROXY
          value: "edge"
        - name: KC_HOSTNAME_URL
          value: https://keycloak.<%= kubernetesNamespace %>.<%= ingressDomain %>
        - name: KC_HOSTNAME_ADMIN_URL
          value: https://keycloak.<%= kubernetesNamespace %>.<%= ingressDomain %>
        ports:
        - name: http
          containerPort: 8080
        - name: https
          containerPort: 8443
        readinessProbe:
          httpGet:
            path: /realms/master
            port: 8080
        volumeMounts:
        - name: keycloak-volume
          mountPath: /opt/keycloak/data/import
      volumes:
      - name: keycloak-volume
        configMap:
          name: keycloak-config
